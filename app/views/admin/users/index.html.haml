
.container
  %h1 User index
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th User name
        %th User email
        %th Tokens left
        %th Created at?
        %th
        %th
    %tbody
      - @users.each do |user|
        %tr{id: "user_#{user.id}"}
          %td= user.name
          %td= user.email
          %td= user.activation_tokens.count
          %td= user.created_at.to_s
          %td
            = link_to edit_user_path(user) do
              %span.fa.fa-pencil
          %td
            = link_to admin_delete_user_path(user), method: :delete, data: { confirm: 'Are you sure you want to delete this users?' } do
              %span.fa.fa-trash
  .col-md-12
    = link_to 'Add new User', admin_new_user_path, class: 'btn btn-success'
