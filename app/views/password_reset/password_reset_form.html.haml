.row.margin-below
= form_for(:new_password, url: { action: :set_new_password }, method: :patch) do |f|
  .hidden-xs.col-sm-3
  .col-sm-6
    .row
      .col-xs-12
        = hidden_field_tag 'id', user_id
      .col-xs-12
        = hidden_field_tag 'token', password_reset_token
      .col-xs-12
        -# TODO translate
        = f.password_field :password, placeholder: 'New password', class: 'form-control'
      .col-xs-12
        -# TODO translate
        = f.password_field :password_confirmation, placeholder: 'Confirm new password', class: 'form-control'
      .col-xs-6
        -# TODO translate
        = f.submit 'Reset password', class: "btn btn-success"
      .col-xs-6
        = link_to 'Cancel', root_url, class: "btn btn-danger"
